<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GameActivity">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btn_ready"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_player1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/player_pink"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_player3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/player_blue"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_player2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/player_yellow"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498" />


    <TextView
        android:id="@+id/tv_player1_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="name"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player1"
        app:layout_constraintEnd_toEndOf="@+id/iv_player1"
        app:layout_constraintHorizontal_bias="0.47"
        app:layout_constraintStart_toStartOf="@+id/iv_player1" />

    <TextView
        android:id="@+id/tv_player2_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="-20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player2"
        app:layout_constraintEnd_toEndOf="@+id/iv_player2"
        app:layout_constraintTop_toTopOf="@+id/iv_player2"
        app:layout_constraintVertical_bias="0.512" />

    <TextView
        android:id="@+id/tv_player3_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-20dp"
        android:text="TextView"
        android:textAlignment="center"
        android:textStyle="bold"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player3"
        app:layout_constraintStart_toStartOf="@+id/iv_player3"
        app:layout_constraintTop_toTopOf="@+id/iv_player3" />

    <Button
        android:id="@+id/btn_ready"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ready"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_mycard"
        android:layout_width="610dp"
        android:layout_height="85dp"
        android:layout_marginBottom="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_player1"
        android:layout_width="485dp"
        android:layout_height="72dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="76dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/iv_player1"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/iv_card_black_bottom"
        android:layout_width="174dp"
        android:layout_height="162dp"
        android:src="@drawable/card_b0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.249"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <ImageView
        android:id="@+id/iv_card_white_bottom"
        android:layout_width="174dp"
        android:layout_height="162dp"
        android:src="@drawable/card_w0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.748"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <ImageView
        android:id="@+id/iv_card_black_top"
        android:layout_width="174dp"
        android:layout_height="162dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/card_bunknown"
        app:layout_constraintBottom_toBottomOf="@+id/iv_card_black_bottom"
        app:layout_constraintStart_toStartOf="@+id/iv_card_black_bottom" />

    <ImageView
        android:id="@+id/iv_card_white_top"
        android:layout_width="177dp"
        android:layout_height="162dp"
        android:layout_marginStart="16dp"
        android:layout_marginBottom="16dp"
        android:src="@drawable/card_wunknown"
        app:layout_constraintBottom_toBottomOf="@+id/iv_card_white_bottom"
        app:layout_constraintStart_toStartOf="@+id/iv_card_white_bottom" />

    <Button
        android:id="@+id/btn_take_black_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뽑기"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_card_black_bottom"
        app:layout_constraintEnd_toEndOf="@+id/iv_card_black_bottom"
        app:layout_constraintStart_toStartOf="@+id/iv_card_black_bottom"
        app:layout_constraintTop_toTopOf="@+id/iv_card_black_bottom" />

    <Button
        android:id="@+id/btn_take_white_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="뽑기"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_card_white_bottom"
        app:layout_constraintEnd_toEndOf="@+id/iv_card_white_bottom"
        app:layout_constraintStart_toStartOf="@+id/iv_card_white_bottom"
        app:layout_constraintTop_toTopOf="@+id/iv_card_white_bottom" />

    <ImageView
        android:id="@+id/iv_player1_loose_check"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:alpha="70"
        android:src="@drawable/card_opened_check"
        android:visibility="invisible"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player1"
        app:layout_constraintEnd_toEndOf="@+id/iv_player1"
        app:layout_constraintStart_toStartOf="@+id/iv_player1"
        app:layout_constraintTop_toTopOf="@+id/iv_player1" />

    <ImageView
        android:id="@+id/iv_player2_loose_check"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:visibility="invisible"
        android:alpha="70"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player2"
        app:layout_constraintEnd_toEndOf="@+id/iv_player2"
        app:layout_constraintStart_toStartOf="@+id/iv_player2"
        app:layout_constraintTop_toTopOf="@+id/iv_player2"
        android:src="@drawable/card_opened_check" />

</androidx.constraintlayout.widget.ConstraintLayout>